<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.egs.example.controller.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.egs.example.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterPage</servlet-name>
        <jsp-file>/WEB-INF/pages/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterPage</servlet-name>
        <url-pattern>/register-view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/WEB-INF/pages/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login-view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Welcome</servlet-name>
        <jsp-file>/WEB-INF/pages/welcome.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.egs.example.controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditUserView</servlet-name>
        <jsp-file>/WEB-INF/pages/editUser.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditUserView</servlet-name>
        <url-pattern>/edit-user-view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditEmailView</servlet-name>
        <jsp-file>/WEB-INF/pages/editEmail.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditEmailView</servlet-name>
        <url-pattern>/edit-email-view</url-pattern>
    </servlet-mapping>



    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.egs.example.controller.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/reset-password-view</url-pattern>
        <url-pattern>/edit-email-view</url-pattern>
        <url-pattern>/edit-user-view</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>EditUser</servlet-name>
        <servlet-class>com.egs.example.controller.EditUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditUser</servlet-name>
        <url-pattern>/edit-user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditEmail</servlet-name>
        <servlet-class>com.egs.example.controller.EditEmailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditEmail</servlet-name>
        <url-pattern>/edit-email</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmailConfirm</servlet-name>
        <servlet-class>com.egs.example.controller.EmailConfirmController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmailConfirm</servlet-name>
        <url-pattern>/registration-confirm</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ForgotPasswordView</servlet-name>
        <jsp-file>/WEB-INF/pages/sendPassword.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPasswordView</servlet-name>
        <url-pattern>/forgot-password-view</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SendEmail</servlet-name>
        <servlet-class>com.egs.example.controller.SendEmailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendEmail</servlet-name>
        <url-pattern>/send-email</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PasswordChangeConfirm</servlet-name>
        <servlet-class>com.egs.example.controller.PasswordChangeConfirmController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PasswordChangeConfirm</servlet-name>
        <url-pattern>/confirm-change-password</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangePasswordView</servlet-name>
        <jsp-file>/WEB-INF/pages/changePassword.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePasswordView</servlet-name>
        <url-pattern>/change-password-view</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <servlet-class>com.egs.example.controller.ChangePasswordController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePassword</servlet-name>
        <url-pattern>/change-password</url-pattern>
    </servlet-mapping>
</web-app>